{
  "$schema": "../../_canonical_schemas/agents.schema.json",
  "workflow_id": "research",
  "agents": [
    {
      "id": "R-00",
      "slug": "orchestrator",
      "role": "Research Orchestrator",
      "agent_type": "orchestrator",
      "description": "Coordinates research project and manages agent handoffs. Session controller and project coordination. Does NOT produce research artifacts - only coordinates.",
      "produces": {
        "core": ["project_index.md", "active_session.md"],
        "log": ["decision_log.md", "handoff_log.md"]
      },
      "consumes": {
        "core": []
      }
    },
    {
      "id": "R-01",
      "slug": "scoping",
      "role": "Research Scoping & Discovery Agent",
      "agent_type": "core",
      "description": "Combines ideation with literature discovery. Elicits research questions, defines scope, formulates hypotheses, designs search strategy, maps research landscape, identifies gaps.",
      "produces": {
        "core": [
          "research_proposal.md",
          "hypothesis_register.md",
          "literature_landscape.md",
          "research_gap_analysis.md"
        ]
      },
      "consumes": {
        "core": []
      }
    },
    {
      "id": "R-02",
      "slug": "synthesis",
      "role": "Source Processing & Synthesis Agent",
      "agent_type": "core",
      "description": "Combines source acquisition with critical analysis. Acquires and organizes source materials, extracts metadata, performs critical analysis, builds synthesis matrix.",
      "produces": {
        "core": [
          "source_library.md",
          "synthesis_matrix.md",
          "evidence_inventory.md"
        ]
      },
      "consumes": {
        "core": [
          "literature_landscape.md",
          "research_gap_analysis.md"
        ]
      }
    },
    {
      "id": "R-03",
      "slug": "methodology",
      "role": "Methodology & Execution Agent",
      "agent_type": "core",
      "description": "Combines methodology design with data collection. Selects methodology, designs experiments, plans data collection, executes collection, cleans and preprocesses data.",
      "produces": {
        "core": [
          "methodology_design.md",
          "experiment_protocol.md",
          "data_dictionary.md"
        ]
      },
      "consumes": {
        "core": [
          "synthesis_matrix.md",
          "hypothesis_register.md"
        ]
      }
    },
    {
      "id": "R-04",
      "slug": "analysis",
      "role": "Analysis & Interpretation Agent",
      "agent_type": "core",
      "description": "Focuses on data analysis and result interpretation. Executes analysis plan, runs statistical tests, generates visualizations, interprets results, compares with hypotheses.",
      "produces": {
        "core": [
          "analysis_results.md",
          "hypothesis_outcomes.md",
          "findings_summary.md"
        ]
      },
      "consumes": {
        "core": [
          "data_dictionary.md",
          "methodology_design.md",
          "hypothesis_register.md"
        ]
      }
    },
    {
      "id": "R-05",
      "slug": "writing",
      "role": "Writing & Narrative Agent",
      "agent_type": "core",
      "description": "Combines narrative construction with manuscript drafting. Builds logical argument flow, links findings to literature, develops contribution claims, drafts all manuscript sections.",
      "produces": {
        "core": [
          "argument_structure.md",
          "contribution_claims.md",
          "manuscript_draft.md"
        ]
      },
      "consumes": {
        "core": [
          "findings_summary.md",
          "synthesis_matrix.md",
          "research_gap_analysis.md"
        ]
      }
    },
    {
      "id": "R-06",
      "slug": "quality",
      "role": "References & Quality Agent",
      "agent_type": "core",
      "description": "Combines citation management with quality assurance. Verifies citations, formats bibliography, checks consistency, validates statistical claims, reviews clarity and readability.",
      "produces": {
        "core": [
          "bibliography.bib",
          "citation_audit.md",
          "qa_report.md"
        ]
      },
      "consumes": {
        "core": [
          "manuscript_draft.md",
          "source_library.md"
        ]
      }
    },
    {
      "id": "R-07",
      "slug": "finalization",
      "role": "Finalization Agent",
      "agent_type": "core",
      "description": "Final editing and submission preparation. Final proofreading, venue formatting, supplementary materials, submission package generation, cover letter, response templates.",
      "produces": {
        "core": [
          "manuscript_final.md",
          "cover_letter.md",
          "submission_checklist.md"
        ]
      },
      "consumes": {
        "core": [
          "manuscript_draft.md",
          "qa_report.md"
        ]
      }
    },
    {
      "id": "R-TEX",
      "slug": "latex",
      "role": "LaTeX Specialist",
      "agent_type": "on_demand",
      "description": "On-demand agent for LaTeX processing. Converts Markdown to LaTeX, applies venue templates, handles math notation, debugs compilation errors.",
      "produces": {
        "log": ["compilation_log.md"]
      },
      "consumes": {
        "core": ["manuscript_draft.md"]
      }
    },
    {
      "id": "R-VIZ",
      "slug": "visualization",
      "role": "Visualization Specialist",
      "agent_type": "on_demand",
      "description": "On-demand agent for visualization. Generates publication-quality figures, conceptual diagrams, flowcharts, data visualizations.",
      "produces": {
        "reference": ["figure_catalog.md"]
      },
      "consumes": {
        "core": ["analysis_results.md"]
      }
    },
    {
      "id": "R-EDIT",
      "slug": "editing",
      "role": "Editing Specialist",
      "agent_type": "on_demand",
      "description": "On-demand agent for editing and compliance. Grammar/spelling, style consistency, academic tone, venue compliance, anonymization, metadata preparation.",
      "produces": {
        "reference": ["editing_report.md"]
      },
      "consumes": {
        "core": ["manuscript_draft.md"]
      }
    },
    {
      "id": "R-STAT",
      "slug": "statistics",
      "role": "Statistics Specialist",
      "agent_type": "on_demand",
      "description": "On-demand agent for stats and citations. Advanced statistical tests, validates assumptions, power analysis, citation verification, DOI checks.",
      "produces": {
        "gating": ["statistical_validation.md"]
      },
      "consumes": {
        "core": [
          "analysis_results.md",
          "source_library.md"
        ]
      }
    }
  ]
}
